<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SavingWater.Views.MainPage"
             Title="{Binding Title}"
             BackgroundImageSource="waterb.jpg">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Button Text="Why Is Water Important?" Command="{Binding Splash}" FontAttributes="Bold"/>
        <Button Text="How Can We Save Water?"  Command="{Binding Water}" FontAttributes="Bold"/>

        <Button Text="Order Purified Water" Command="{Binding Login}" FontAttributes="Bold" />
    </StackLayout>

</ContentPage>